{
	"name": "solang",
	"displayName": "Solang Solidity Compiler",
	"description": "Use the solang compiler for syntax highlighting, compiler warnings and errors, and hovers",
	"publisher": "solang",
	"author": "Shivam Balikondwar <shivambalikondwar@icloud.com>",
	"version": "0.0.1",
	"repository": "github.com/hyperledger-labs/solang",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:solidity",
		"onCommand:solang.helloWorld",
		"onCommand:solang.sendfirstcode"
	],
	"main": "./out/client/extension.js",
	"contributes": {
		"capabilities": {
			"hoverProvider": "true"
		},
		"languages": [
			{
				"id": "solidity",
				"aliases": [
					"Solidity",
					"solidity"
				],
				"extensions": [
					".sol"
				],
				"configuration": "./solidity.configuration.json"
			}
		],
		"commands": [
			{
				"command": "solang.helloWorld",
				"title": "Hello World... initial startup"
			},
			{
				"command": "solang.sendfirstcode",
				"title": "Send first code"
			},
			{
				"command": "solang.applyedit",
				"title": "Apply edit"
			}
		],
		"snippets": [
			{
				"language": "solidity",
				"path": "./snippets/solidity.json"
			}
		],
		"grammars": [
			{
				"language": "solidity",
				"scopeName": "source.solidity",
				"path": "./syntaxes/solidity.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"vsce": "^1.81.1",
		"vscode-languageclient": "^6.1.3",
		"vscode-languageserver": "^6.1.1"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.43.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
